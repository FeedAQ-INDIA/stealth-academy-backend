{
	"info": {
		"_postman_id": "organization-groups-api",
		"name": "Organization Groups API",
		"description": "API collection for managing organizations, groups, and user memberships",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Organization User Management",
			"item": [
				{
					"name": "Add User to Organization",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": 123,\n  \"role\": \"MEMBER\",\n  \"invitedBy\": 456\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/organization/{{orgId}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["organization", "{{orgId}}", "users"]
						}
					}
				},
				{
					"name": "Remove User from Organization",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/organization/{{orgId}}/users/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["organization", "{{orgId}}", "users", "{{userId}}"]
						}
					}
				},
				{
					"name": "Update User Role in Organization",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"ADMIN\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/organization/{{orgId}}/users/{{userId}}/role",
							"host": ["{{baseUrl}}"],
							"path": ["organization", "{{orgId}}", "users", "{{userId}}", "role"]
						}
					}
				},
				{
					"name": "Get Organization Users",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/organization/{{orgId}}/users?includeGroups=true",
							"host": ["{{baseUrl}}"],
							"path": ["organization", "{{orgId}}", "users"],
							"query": [
								{
									"key": "includeGroups",
									"value": "true",
									"description": "Include user group memberships"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Group Management",
			"item": [
				{
					"name": "Create Group",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"groupName\": \"Engineering Team\",\n  \"description\": \"Software development team\",\n  \"metadata\": {\n    \"department\": \"Technology\",\n    \"budget\": 50000\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/organization/{{orgId}}/groups",
							"host": ["{{baseUrl}}"],
							"path": ["organization", "{{orgId}}", "groups"]
						}
					}
				},
				{
					"name": "Update Group",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"groupName\": \"Senior Engineering Team\",\n  \"description\": \"Updated description\",\n  \"status\": \"ACTIVE\",\n  \"metadata\": {\n    \"department\": \"Technology\"\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/groups/{{groupId}}",
							"host": ["{{baseUrl}}"],
							"path": ["groups", "{{groupId}}"]
						}
					}
				},
				{
					"name": "Delete Group",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/groups/{{groupId}}",
							"host": ["{{baseUrl}}"],
							"path": ["groups", "{{groupId}}"]
						}
					}
				},
				{
					"name": "Get Organization Groups",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/organization/{{orgId}}/groups?includeMembers=true",
							"host": ["{{baseUrl}}"],
							"path": ["organization", "{{orgId}}", "groups"],
							"query": [
								{
									"key": "includeMembers",
									"value": "true",
									"description": "Include group member details"
								}
							]
						}
					}
				},
				{
					"name": "Get Group by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/groups/{{groupId}}?includeMembers=true",
							"host": ["{{baseUrl}}"],
							"path": ["groups", "{{groupId}}"],
							"query": [
								{
									"key": "includeMembers",
									"value": "true",
									"description": "Include group member details"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Group Membership Management",
			"item": [
				{
					"name": "Add Users to Group",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userIds\": [123, 456, 789],\n  \"role\": \"MEMBER\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/groups/{{groupId}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["groups", "{{groupId}}", "users"]
						}
					}
				},
				{
					"name": "Remove User from Group",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/groups/{{groupId}}/users/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["groups", "{{groupId}}", "users", "{{userId}}"]
						}
					}
				},
				{
					"name": "Update User Role in Group",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"ADMIN\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/groups/{{groupId}}/users/{{userId}}/role",
							"host": ["{{baseUrl}}"],
							"path": ["groups", "{{groupId}}", "users", "{{userId}}", "role"]
						}
					}
				},
				{
					"name": "Get Group Members",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/groups/{{groupId}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["groups", "{{groupId}}", "users"]
						}
					}
				},
				{
					"name": "Get User Groups",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/users/{{userId}}/groups?orgId={{orgId}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "{{userId}}", "groups"],
							"query": [
								{
									"key": "orgId",
									"value": "{{orgId}}",
									"description": "Filter by organization ID"
								}
							]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "your-auth-token-here",
			"type": "string"
		},
		{
			"key": "orgId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "groupId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "1",
			"type": "string"
		}
	]
}
